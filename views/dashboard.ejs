<!DOCTYPE html>
<html>
<head>
  <title>Warehouse Dashboard</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Warehouse Dashboard</h1>

  <div>
    <h2>Incoming / Queue</h2>
    <table border="1">
      <tr><th>Name</th><th>Description</th><th>Drop-off Time</th><th>Instructions</th><th>Scan</th></tr>
      <% items.filter(i => i.status === "Submitted").forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= item.dropoff_time %></td>
          <td><%= item.instructions %></td>
          <td><a href="/scan/<%= item.id %>"><button>Scan</button></a></td>
        </tr>
      <% }) %>
    </table>
  </div>

  <div>
    <h2>Received / Stored</h2>
    <table border="1">
      <tr><th>Name</th><th>Description</th><th>Drop-off Time</th><th>Status</th><th>Location</th><th>QR</th></tr>
      <% items.filter(i => i.status === "Stored" || i.status === "Waiting for Delivery").forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= item.dropoff_time %></td>
          <td><%= item.status %></td>
          <td><%= item.location %></td>
          <td><img src="<%= item.qr %>" width="50"></td>
        </tr>
      <% }) %>
    </table>
  </div>

  <div>
    <h2>Delivered</h2>
    <table border="1">
      <tr><th>Name</th><th>Description</th><th>Drop-off Time</th><th>Status</th><th>Location</th><th>QR</th></tr>
      <% items.filter(i => i.status === "Delivered").forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= item.dropoff_time %></td>
          <td><%= item.status %></td>
          <td><%= item.location %></td>
          <td><img src="<%= item.qr %>" width="50"></td>
        </tr>
      <% }) %>
    </table>
  </div>
</body>
</html>
